<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_rl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/banana_yellow"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_iv_smiley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/content_description_smiley"
        tools:src="@drawable/smiley_super_happy" />

    <ImageView
        android:id="@+id/main_iv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:contentDescription="@string/content_description_comment_humors"
        android:padding="16dp"
        android:src="@drawable/ic_comment_black_36dp" />

    <ImageView
        android:id="@+id/main_iv_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:contentDescription="@string/content_description_acces_history"
        android:padding="16dp"
        android:src="@drawable/ic_history_black_36dp" />

</RelativeLayout>