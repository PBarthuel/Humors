<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/super_happy_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/banana_yellow"/>

    <ImageView
        android:id="@+id/super_happy"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:src="@drawable/smiley_super_happy"/>

    <ImageButton
        android:id="@+id/activity_comment_super_happy"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@color/banana_yellow"
        android:src="@drawable/ic_note_add_black" />

    <ImageButton
        android:id="@+id/history_super_happy"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/banana_yellow"
        android:src="@drawable/ic_history_black" />

</RelativeLayout>