<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_rl_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:background="@color/banana_yellow">

    <ImageView
        android:id="@+id/main_iv_smiley"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:src="@drawable/smiley_super_happy"
        android:contentDescription="@string/content_description_smiley"/>

    <ImageView
        android:id="@+id/main_iv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_comment_black_36dp"
        android:contentDescription="@string/content_description_comment_humors"/>

    <ImageView
        android:id="@+id/main_iv_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_history_black_36dp"
        android:contentDescription="@string/content_description_acces_history"/>

</RelativeLayout>