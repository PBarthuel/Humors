<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/history_cl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/history_tv_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="blabla"
        app:layout_constraintHeight_percent="0.128"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/faded_red"
        app:layout_constraintWidth_percent="0.20"
        app:layout_constraintHorizontal_bias="0"/>

    <ImageView
        android:id="@+id/history_iv_day7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_comment_black_36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/history_tv_7"
        app:layout_constraintBottom_toBottomOf="@id/history_tv_7"
        android:padding="16dp"/>

    <TextView
        android:id="@+id/history_tv_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="blabla"
        app:layout_constraintHeight_percent="0.128"
        app:layout_constraintTop_toBottomOf="@id/history_tv_7"
        android:background="@color/banana_yellow"/>

</android.support.constraint.ConstraintLayout>